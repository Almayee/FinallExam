@using FinalExam.Core.Models
@model Product
<div class="container">
    <div class="row">
        <div col-12>
            <form asp-action="DeletePost" method="post">
                <div class="card" style="width: 18rem;">
                    <img src="~/uploads/products/@Model.ImageUrl" class="card-img-top" alt="...">
                    <div class="card-body">
                        <a asp-action="index" asp-controller="product" class="btn btn-outline-info">Go Back</a>
                        <input asp-for="@Model.Id" hidden value="@Model.Id" />
                        <button type="submit" class="btn btn-outline-danger">Delete</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
