@using FinalExam.Core.Models
@model List<Product>
@{
    int counter = 1;
}
<div class="container">
    <div class="row">
        <div class="col-3 mb-3 ">
            <a asp-action="Create" asp-controller="Product" class="btn btn-outline-primary">Create Blog</a>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Id</th>
                        <th scope="col">Image</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        
                        <tr>
                            <th scope="row">@(counter++)</th>
                            <td><img src="~/uploads/products/@item.ImageUrl" width="100" height="100" /></td>
                            <td>
                                <a asp-action="Update" asp-controller="Product" asp-route-id="@item.Id" class="btn btn-outline-warning">Update</a>
                                <a asp-action="Delete" asp-controller="Product" asp-route-id="@item.Id" class="btn btn-outline-danger">Delete</a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
